{
  "name": "digital-legacy-vault",
  "type": "project",
  "description": "Digital Legacy Vault Application",
  "keywords": ["digital", "legacy", "vault"],
  "license": "MIT",
  "require": {
    "php": "^8.2",
    "laravel/framework": "^10.0",
    "laravel/sanctum": "^3.2",
    "pragmarx/google2fa": "^8.0",
    "spatie/laravel-backup": "^8.10",
    "bacon/bacon-qr-code": "^2.0"
  },
  "require-dev": {
    "laravel/pint": "^1.0",
    "phpunit/phpunit": "^10.0",
    "fakerphp/faker": "^1.20"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/",
      "Database\\Factories\\": "database/factories/",
      "Database\\Seeders\\": "database/seeders/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "post-autoload-dump": [
      "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
      "@php vendor/bin/pint -l"
    ],
    "test": "phpunit"
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
